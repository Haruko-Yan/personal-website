<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% if (locals.article) { %>
        <title><%= article.title %></title>
    <% } %>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="/styles/main.css">
  </head>
  <body>
    <header>
      <nav class="scroll-top">
        <div class="nav-container">
          <button class="bi bi-list" data-bs-toggle="offcanvas" href="#side-bar"></button>
          <div class="nav-btn">
            <a class="main-page-link" href="/">
              <i class="bi bi-sun"></i>
              <span>晴's blog</span>
            </a>
          </div>
          <ul class="nav-right">
            <li class="nav-btn">
              <a href="/blog">
                <i class="bi bi-book-half"></i>
                <span>Blog</span>
              </a>
              </li>
            <li class="nav-btn">
              <a href="/about">
                <i class="bi bi-file-earmark-person-fill"></i>
                <span>About</span>
              </a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="offcanvas offcanvas-start" tabindex="-1" id="side-bar">
        <div class="offcanvas-header">
          <a id="sidebar-title" href="/">
            <i class="bi bi-sun"></i>
            <span>晴's blog</span>
          </a>
          <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
          <div id="sidebar-motto">
            <i class="bi bi-battery-charging"></i>
            <span>Make life better</span>
          </div>
          <div>
            <ul class="sidebar-bottom">
              <li class="sidebar-item">
                <a href="/blog">
                  <i class="bi bi-book-half"></i>
                  <span>Blog</span>
                </a>
              </li>
              <li class="sidebar-item">
                <a href="/about">
                  <i class="bi bi-file-earmark-person-fill"></i>
                  <span>About</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </header>
    <main>

<div class="container">
    <% if (locals.article) { %>
    <div class="title-area">
        <div class="title"><h2><%=article.title %></h2></div>
    </div>
    <div class="article-area">
        <div id="article-detail">
            <div id="article-info">
                <div class="info-items">
                    <div class="info-item"><i class="bi bi-person-circle" title="Author"></i><span><%=article.author %></span></div>
                    <div class="info-item"><i class="bi bi-calendar" title="Published on"></i>
                        <span>
                            <% const month = ["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"]; %>
                            <%=month[article.date.getMonth()]%> <%=article.date.getDate()%>, <%=article.date.getFullYear()%> at <%=article.date.getHours() < 10? "0" + article.date.getHours() : article.date.getHours()%>:<%=article.date.getMinutes() < 10? "0" + article.date.getMinutes() : article.date.getMinutes()%>:<%=article.date.getSeconds() < 10? "0" + article.date.getSeconds() : article.date.getSeconds()%>
                        </span>
                    </div>
                    <div class="info-item"><i class="bi bi-eye-fill" title="viewed"></i><span><%=article.hits %></span></div>
                </div>
                <div class="article-tags">
                    <% if (article.tag.length > 1 || article.tag[0] !== '') { %>
                        <% const colors = ['#198754', '#dc3545', '#ffc107', '#0dcaf0'] %>
                        <% let count = 0 %>
                        <% article.tag.forEach(tag => { %>
                            <% if (count > 3) { %>
                                <% count = 0 %>
                            <% } %>
                            <div class="article-tag" style="background-color: <%=colors[count] %>;"><%=tag %></div>
                            <% count++ %>
                        <% }); %>
                    <% } %>
                </div>
            </div>
            <div class="article-text">
                <%- article.text %>
            </div>
        </div>
    </div>
    <% } %>
</div>

<%- include("partials/footer.ejs") %>